# Server runtime
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000
APP_BASE_URL=http://localhost:3000

# Analytics admin
ANALYTICS_ADMIN_PASSWORD=change-me

# Validation behavior
STRICT_SERVER_VALIDATION=false
ENABLE_GUESS_FSTS=false

# Auth (Phase A/B)
AUTH_ENABLED=false
GUEST_MODE_ENABLED=true
AUTH_ACCESS_TOKEN_SECRET=change-me-access
AUTH_REFRESH_TOKEN_SECRET=change-me-refresh
AUTH_ACCESS_TTL_MINUTES=15
AUTH_REFRESH_TTL_DAYS=30
AUTH_COOKIE_NAME=solmaalai_rt
AUTH_COOKIE_SECURE=false
AUTH_EMAIL_VERIFICATION_TTL_HOURS=24
AUTH_PASSWORD_RESET_TTL_MINUTES=30

# Optional email delivery for verification + reset
# leave EMAIL_PROVIDER empty for dev-safe fallback responses
EMAIL_PROVIDER=
EMAIL_FROM=
# Zoho SMTP example:
# EMAIL_PROVIDER=zoho_smtp
# EMAIL_SMTP_HOST=smtp.zoho.com
# EMAIL_SMTP_PORT=465
# EMAIL_SMTP_SECURE=true
# EMAIL_SMTP_USER=admin@solmaalai.com
# EMAIL_SMTP_PASS=your-zoho-app-password
# EMAIL_DEBUG=true

# Analytics storage
ANALYTICS_STORE_RAW_IP=true
# ANALYTICS_DB_PATH=/absolute/path/to/analytics.db

# Geo enrichment
GEO_PROVIDER=none
GEO_LOOKUP_TIMEOUT_MS=800
GEO_CACHE_TTL_MS=86400000
GEO_IP_HASH_SALT=change-me
